<Page x:Class="HARRM.Pages.Clients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HARRM.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Clients" Loaded="Page_Loaded">

    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Button Content="Выйти" Height="30" Width="100" Margin="5" Click="Button_Click"/>
                <Button Content="Заявки" Height="30" Width="100" Margin="5" Click="Button_Click_2"/>
                <Button Content="Сохранить" Height="30" Width="100" Margin="5" Click="Button_Click_1"/>
            </StackPanel>
            <DataGrid x:Name="table" Width="800"/>
        </DockPanel>
        
    </Grid>
</Page>
