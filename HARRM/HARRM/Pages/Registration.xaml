<Page x:Class="HARRM.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HARRM.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Логин" Margin="5"/>
            <TextBox x:Name="username" Margin="5"/>
            <Label Content="Пароль" Margin="5"/>
            <PasswordBox x:Name="password" Margin="5"/>
            <Label Content="Подтвердите пароль" Margin="5"/>
            <PasswordBox x:Name="confirmPassword" Margin="5"/>
            <Label Content="Администратор" Margin="5"/>
            <CheckBox x:Name="role" Margin="5"/>
            <Button Content="Зарегистрироваться" Margin="5" Click="Button_Click_1"/>
            <Button Content="Назад" Margin="5" Click="Button_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
